<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header Progress Bar + X + Timer -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Tombol X -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@drawable/ic_close"
            android:contentDescription="Close" />

        <!-- Progress Bar (expand di tengah) -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:progressDrawable="@drawable/progress_custom"
            android:max="100"
            android:progress="20" />

        <!-- Timer -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <!-- Text di bawah progress bar -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw the following"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/headerLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <!-- Canvas untuk menggambar -->
    <com.android.canvas.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tvInstruction"
        android:layout_above="@id/tvCommand"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Perintah di atas tombol -->
    <TextView
        android:id="@+id/tvCommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Square root"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_above="@id/btnClear"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <!-- Tombol Clear -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:text="Check"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_orange"
        android:backgroundTint="@null" />

</RelativeLayout>
